<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to root_path, class: 'brand' do %>
        <%= image_tag "books.png", width: '20px' %>  
        Library
      <% end %>
      <span class="pull-right">
        <ul class="nav">
          <% if current_user %>
          <li>
              <%= link_to t('users.profile.titlebar'), edit_user_path(current_user.id) %>
            </li>
            <li>
              <%= link_to t('users.profile.logout'), session_path, method: :delete %>
            </li>
          <% else %>
            <li>
              <%= link_to t('users.profile.login'), new_session_path %>
            </li>
            <li>
              <%= link_to t('users.profile.signup'), new_user_path %>
            </li>
          <% end %>
        </ul>
      </span>
    </div>
  </div>
</div>
